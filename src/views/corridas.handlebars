<div class="list p-5">
    <table class="table">
        <thead>
            <tr>
                <h4>Corridas</h4>
                <hr>
            </tr>
            <tr>
                <th> </th>
                <th>CPF Passageiro</th>
                <th>CNH Piloto</th>
                <th>Destino</th>
                <th>Valor</th>
            </tr>
        </thead>
        <tbody>
            {{#each races}}
            <tr>
                <th scope="row"><ion-icon name="map-outline"></ion-icon></th>
                <td>000.000.000.00</td>
