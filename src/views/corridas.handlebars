<div class="list p-5">
    <table class="table">
        <thead>
            <tr>
                <h4>Corridas</h4>
                <hr>
            </tr>
            <tr>
                <th> </th>
                <th>Passageiro</th>
                <th>CPF Passageiro</th>
                <th>Piloto</th>
                <th>CNH Piloto</th>
                <th>Origem</th>
                <th>Destino</th>
                <th>Inicio</th>
                <th>Fim</th>
                <th>Duração</th>
                <th>Valor</th>
            </tr>
        </thead>
        <tbody>
            {{#each races}}
            <tr>
                <th scope="row"><ion-icon name="map-outline"></ion-icon></th>
                <td>{{nome_passageiro}}</td>
                <td>{{cpf_passageiro}}</td>
                <td>{{nome_piloto}}</td>
                <td>{{cnh_piloto}}</td>
                <td>{{origem}}</td>
                <td>{{destino}}</td>
                <td>{{horario_inicio_formatado}}</td>
                <td>{{horario_final_formatado}}</td>
                <td>{{duracao}}</td>
                <td>R${{valor}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<!-- Modal para cadastro de corrida -->
<div class="modal" id="modalCadastroCorrida">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="p-2">
                    <div class="container form-container">
                        <div class="form-header">
                            <h3>Cadastro para Corrida</h3>
                            <hr>
                        </div>
                        <div class="form-body">
                            <form action="/corridas/cadastrar" method="POST">
                                {{!-- <div class="alert alert-success" role="alert">
                                    Exemplo mensagem de sucesso.
                                </div>
                                <div class="alert alert-danger" role="alert">
                                    Exemplo mensagem de erro.
                                </div> --}}
                                <div class="row p-2">
                                    <div class="col">
                                        <select name="cpf" id="cpf" class="form-select" required>
                                            <option value="">Escolha um passageiro</option>
                                            {{#each passengers}}
                                            <option value="{{cpf}}">{{nome}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                    <div class="col">
                                        <select name="cnh" id="cnh" class="form-select" required>
                                            <option value="">Escolha um piloto</option>
                                            {{#each pilots}}
                                            <option value="{{cnh}}">{{nome}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <div class="row p-2">
                                    <div class="col">
                                        <input type="text" class="form-control" placeholder="Ponto de Partida"
                                            name="localizacaoPassageiro" id="localizacaoPassageiro" required>
                                    </div>
                                    <div class="col">
                                        <input type="text" class="form-control" placeholder="Destino" name="destino"
                                            id="destino" required>
                                    </div>
                                </div>
                                <div class="row p-2">
                                    <div class="col">
                                        <input type="datetime-local" class="form-control" name="horarioInicial"
                                            id="horarioInicial">
                                    </div>
                                    <div class="col">
                                        <input type="datetime-local" class="form-control" name="horarioFinal"
                                            id="horarioFinal">
                                    </div>
                                    <div class="col">
                                        <input type="number" class="form-control" placeholder="Valor" name="valor"
                                            id="valor" required>
                                    </div>
                                </div>
                                <div class="row p-2">
                                    <div class="col text-center">
                                        <button class="btn button" type="submit">Enviar</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>