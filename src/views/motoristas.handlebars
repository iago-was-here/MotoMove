<div class="list p-5">
    <table class="table">
        <thead>
            <tr>
                <h4>Motoristas Cadastrados</h4>
                <hr>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
                <tr>
                    <th scope="row"><ion-icon name="bicycle-outline"></ion-icon></th>
                    <td>{{nome}}</td>
                    <td>{{email}}</td>
                    <td><a href="motoristas/editar/{{cpf}}" class="btn btn-primary">Editar</a></td>
                    <td><a href="motoristas/excluir/{{cpf}}" class="btn btn-danger">Excluir</a></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<!-- Modal para cadastro de motorista -->
<div class="modal" id="modalCadastroMotorista">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="p-2">
                    <div class="container form-container">
                        <div class="form-header">
                            <h3>Cadastro para Motorista</h3>
                            <hr>
                        </div>
                        <div class="form-body">
                            <form action="/cadastrar/motorista" method="POST">
                                {{!-- <div class="alert alert-success" role="alert">
                                    Exemplo mensagem de sucesso.
                                </div>
                                <div class="alert alert-danger" role="alert">
                                    Exemplo mensagem de erro.
                                </div> --}}
                                <div class="row p-2">
                                    <div class="col">
                                        <input type="text" class="form-control" placeholder="Nome" name="nome" id="nome"
                                            required>
                                    </div>
                                    <div class="col">
                                        <input type="text" class="form-control" placeholder="CPF" name="cpf" id="cpf"
                                            required>
                                    </div>
                                </div>
                                <div class="row p-2">
                                    <div class="col">
                                        <input type="text" class="form-control" placeholder="Telefone" name="telefone"
                                            id="telefone" required>
                                    </div>
                                    <div class="col">
                                        <input type="date" class="form-control" placeholder="Data de nascimento"
                                            name="dataNascimento" id="dataNascimento" required>
                                    </div>
                                </div>
                                <div class="row p-2">
                                    <div class="col">
                                        <input type="text" class="form-control" placeholder="E-mail" name="email"
                                            id="email" required>
                                    </div>
                                    <div class="col">
                                        <input type="password" class="form-control" placeholder="Senha" name="senha"
                                            id="senha" required>
                                    </div>
                                </div>
                                <hr>
                                <div class="row p-2">
                                    <div class="col">
                                        <input type="text" class="form-control" placeholder="CNH" name="cnh" id="cnh"
                                            required>
                                    </div>
                                    <div class="col">
                                        <input type="text" class="form-control" placeholder="Documento do veículo"
                                            name="documentoVeiculo" id="documentoVeiculo" required>
                                    </div>
                                </div>
                                <div class="row p-2">
                                    <div class="col">
                                        <input type="text" class="form-control" placeholder="Número da conta bancária"
                                            name="dadosBancarios" id="dadosBancarios" required>
                                    </div>
                                    <div class="col">
                                        <input type="text" class="form-control" placeholder="CNPJ" name="cnpj" id="cnpj">
                                    </div>
                                </div>
                                <div class="row p-2">
                                    <div class="col text-center">
                                        <button class="btn button" type="submit">Enviar</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>